<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_marginTop="717dp"
        android:background="@color/panel">

        <ImageButton
            android:id="@+id/khl_btn_k"
            android:layout_width="wrap_content"
            android:layout_height="59dp"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/khl" />

        <ImageButton
android:onClick="onClick"
            android:id="@+id/whl_btn_k"
            android:layout_width="wrap_content"
            android:layout_height="59dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/whl" />

        <ImageButton
android:onClick="onClick"
            android:id="@+id/mhl_btn_k"
            android:layout_width="wrap_content"
            android:layout_height="59dp"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/mhl" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_marginTop="-784dp"
        android:layout_height="70dp"
        android:background="@color/panel">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="-1.8dp"
            android:src="@drawable/khl" />

        <TextView
            android:id="@+id/textView"
            android:layout_marginLeft="83dp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="Континентальная Хоккейная Лига" />
    </FrameLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="773dp"
        android:layout_marginBottom="48dp">

        <GridView
            android:id="@+id/gridView"
            android:layout_width="match_parent"
            android:layout_height="773dp"
            android:layout_alignParentTop="true"

            android:layout_alignParentBottom="true"
            android:layout_marginBottom="48dp" />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</LinearLayout>